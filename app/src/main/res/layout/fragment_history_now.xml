<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF1FE"
    android:orientation="vertical"
    tools:context=".fragments.HistoryNowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="329dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="Duy Hoang Field"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="239dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="152dp"
                    android:layout_height="106dp"
                    android:src="@drawable/image_1" />

                <LinearLayout
                    android:layout_width="166dp"
                    android:layout_height="106dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Field A"
                        android:textColor="#000000"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="31dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/multiple_users_silhouette" />

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|top"
                            android:text="5"
                            android:textAlignment="textStart"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="31dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/outline_location_on_24" />

                        <TextView
                            android:id="@+id/tvLocal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|top"
                            android:text="HCMC"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="71dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Booking Date:"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="28/09/2021"
                    android:textAlignment="textEnd"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Time picker:"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:text="15h-16h"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:text="$7"
                    android:textAlignment="textEnd"
                    android:textColor="#FD0000" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:text="$5.6"
                    android:textAlignment="center"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="23dp">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:text="16h-17h"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:text="$7"
                    android:textAlignment="textEnd"
                    android:textColor="#FF0000" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"
                    android:text="$5.6"
                    android:textAlignment="center"
                    android:textColor="#000000" />
            </TableRow>

            <View
                android:id="@+id/divider9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:text="$11.2"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </TableRow>

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="start|end"
            android:textAlignment="center"
            tools:ignore="RtlCompat">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:backgroundTint="#F13232"
                android:minHeight="50dp"
                android:text="Cancel"
                android:textAlignment="center" />
        </TableRow>

    </LinearLayout>

</LinearLayout>