<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:background="#EFF1FE"
    android:orientation="vertical"
    tools:context=".fragments.HistoryNowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="359dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="Duy Hoang Field"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="304dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="152dp"
                    android:layout_height="106dp"
                    android:src="@drawable/image_1" />

                <LinearLayout
                    android:layout_width="204dp"
                    android:layout_height="106dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Field A"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="31dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/multiple_users_silhouette" />

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|top"
                            android:text="5"
                            android:textAlignment="textStart"
                            android:textSize="14sp"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="31dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/outline_location_on_24" />

                        <TextView
                            android:id="@+id/tvLocal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|top"
                            android:text="HCMC"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:layout_marginLeft="2dp"
                        android:gravity="bottom|top"
                        android:text="-20%"
                        android:textColor="#D61313" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="71dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Booking Date"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="28/09/2021"
                    android:textAlignment="textEnd"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="TimePicker"
                android:textAlignment="center" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="181dp"
                        android:layout_height="wrap_content"
                        android:text="15h-16h"
                        android:textAlignment="center" />

                    <View
                        android:id="@+id/divider4"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:text="$7"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="181dp"
                        android:layout_height="wrap_content"
                        android:text="16h-17h"
                        android:textAlignment="center" />

                    <View
                        android:id="@+id/divider5"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:text="$7"
                        android:textAlignment="center" />
                </TableRow>


            </TableLayout>

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider7"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:text="$14"
                    android:textAlignment="center"
                    android:textColor="#F40606"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:text="$11.2"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|end"
                android:textAlignment="center"
                tools:ignore="RtlCompat">

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#F13232"
                    android:minHeight="50dp"
                    android:text="Cancel"
                    android:textAlignment="center" />
            </TableRow>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>