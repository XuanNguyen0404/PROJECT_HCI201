<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TimeWorking90minutesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPriceOfDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4$/h"
                android:textColor="#099CD9"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTextPriceDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="5$/h"
                android:textColor="@color/red"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-20%"
                android:textAlignment="textEnd"
                android:textColor="@color/red"
                android:textSize="16dp" />
        </LinearLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:columnCount="4">

            <ToggleButton
                style="@style/MyToggleButton"
                android:enabled="false"
                android:textOff="7h-8h30"
                android:textOn="7h-8h30" />

            <ToggleButton
                android:id="@+id/tgBtn"
                style="@style/MyToggleButton"
                android:textOff="8h30-10h"
                android:textOn="8h30-10h" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="10h-11h30"
                android:textOn="10h-11h30" />
            <ToggleButton

                style="@style/MyToggleButton"
                android:textOff="11h30-13h"
                android:textOn="11h30-13h" />
        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="7$/h"
            android:textColor="#099CD9"
            android:textSize="18dp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:columnCount="4">

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="17h-18h30"
                android:textOn="17h-18h30" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="18h30-20h"
                android:textOn="18h30-20h" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="20h-21h30"
                android:textOn="20h-21h30" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="21h30-23h"
                android:textOn="21h30-23h" />
        </GridLayout>
    </LinearLayout>

</FrameLayout>