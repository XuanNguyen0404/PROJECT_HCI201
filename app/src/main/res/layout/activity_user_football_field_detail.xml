                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="5$/h"
                                android:textSize="14dp"
                                android:textColor="@color/red"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="textEnd"
                                android:text="-20%"
                                android:textSize="16dp"
                                android:textColor="@color/red"/>
                        </LinearLayout>


                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:columnCount="4">

                            <ToggleButton

                                style="@style/MyToggleButton"
                                android:enabled="false"
                                android:textOff="7h-8h"
                                android:textOn="7h-8h" />

                            <ToggleButton
                                android:id="@+id/tgBtn"
                                style="@style/MyToggleButton"
                                android:textOff="8h-9h"
                                android:textOn="8h-9h" />

                            <ToggleButton
                                style="@style/MyToggleButton"
                                android:textOff="9h-10h"
                                android:textOn="9h-10h" />

                            <ToggleButton
                                style="@style/MyToggleButton"
                                android:textOff="10h-11h"
                                android:textOn="10h-11h" />
                        </GridLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:text="7$/h"
                            android:textColor="#099CD9"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:columnCount="4">

                            <ToggleButton
                                style="@style/MyToggleButton"
                                android:textOff="17h-18h"
                                android:textOn="17h-18h" />

                            <ToggleButton
                                style="@style/MyToggleButton"
                                android:textOff="18h-19h"
                                android:textOn="18h-19h" />

                            <ToggleButton
                                style="@style/MyToggleButton"
                                android:textOff="19h-20h"
                                android:textOn="19h-20h" />

                            <ToggleButton
                                style="@style/MyToggleButton"
                                android:textOff="21h-22h"
                                android:textOn="21h-22h" />

                        </GridLayout>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="25dp"
                            android:backgroundTint="#9DC030"
                            android:onClick="clickToAddToCart"
