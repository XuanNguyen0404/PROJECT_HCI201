<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TimeWorking30minutesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPriceOfDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4$/h"
                android:textColor="#099CD9"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTextPriceDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="5$/h"
                android:textColor="@color/red"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-20%"
                android:textAlignment="textEnd"
                android:textColor="@color/red"
                android:textSize="16dp" />
        </LinearLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:columnCount="4">

            <ToggleButton
                style="@style/MyToggleButton"
                android:enabled="false"
                android:textOff="7h-7h30"
                android:textOn="7h-7h30" />

            <ToggleButton
                android:id="@+id/tgBtn"
                style="@style/MyToggleButton"
                android:enabled="false"
                android:textOff="7h30-8h"
                android:textOn="7h30-8h" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="8h-8h30"
                android:textOn="8h-8h30" />

            <ToggleButton

                style="@style/MyToggleButton"
                android:textOff="8h30-9h"
                android:textOn="8h30-9h" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="9h-9h30"
                android:textOn="9h-9h30" />
            <ToggleButton

                style="@style/MyToggleButton"
                android:textOff="9h30-10h"
                android:textOn="9h30-10h" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="10h-10h30"
                android:textOn="10h-10h30" />

            <ToggleButton

                style="@style/MyToggleButton"
                android:textOff="10h30-11h"
                android:textOn="10h30-11h" />
        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="7$/h"
            android:textColor="#099CD9"
            android:textSize="18dp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:columnCount="4">

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="17h-17h30"
                android:textOn="17h-17h30" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="17h30-18h"
                android:textOn="17h30-18h" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="18h-18h30"
                android:textOn="18h-18h30" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="18h30-19h"
                android:textOn="18h30-19h" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="19h-19h30"
                android:textOn="19h-19h30" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="19h30-20h"
                android:textOn="19h30-20h" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="20h-20h30"
                android:textOn="20h-20h30" />

            <ToggleButton
                style="@style/MyToggleButton"
                android:textOff="20h30-21h"
                android:textOn="20h30-21h" />
        </GridLayout>
    </LinearLayout>

</FrameLayout>